<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup_background">

    <Button
        android:id="@+id/signUp_backButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/back_icon"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        ></Button>

    <!-- Title -->

    <TextView
        android:id="@+id/login_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="SIGN UP!"
        android:textColor="@color/loginBG_darkerBlue"
        android:textSize="40sp"
        android:textStyle="bold"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:background="@color/black"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">


        <!-- Error Message -->
        <TextView
            android:id="@+id/signUp_errMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/red"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >

            <!-- Name Input -->
            <EditText
                android:id="@+id/signUp_name"
                android:maxLength="12"
                android:maxLines="1"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/name_icon"
                android:hint="Name        "
                android:drawablePadding="10dp"
                android:background="@drawable/logininput_background"
                android:padding="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"></EditText>

            <!-- Lasr Name Input -->
            <EditText
                android:id="@+id/signUp_lastName"
                android:maxLength="12"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/name_icon"
                android:hint="Last Name   "
                android:drawablePadding="10dp"
                android:background="@drawable/logininput_background"
                android:padding="10dp"
                android:layout_marginStart="20dp"></EditText>

        </LinearLayout>

        <!-- Username Input -->
        <EditText
            android:id="@+id/signUp_username"
            android:maxLength="15"
            android:maxLines="1"
            android:layout_gravity="center_horizontal"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/login_icon"
            android:hint="Username"
            android:drawablePadding="10dp"
            android:background="@drawable/signupbtn_background"
            android:padding="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"></EditText>

        <!-- Password Input -->
        <EditText
            android:maxLength="15"
            android:maxLines="1"
            android:id="@+id/signUp_password"
            android:password="true"
            android:layout_gravity="center_horizontal"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/password_icon"
            android:hint="Password"
            android:drawablePadding="10dp"
            android:background="@drawable/signupbtn_background"
            android:padding="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"></EditText>


        <!-- Password 2nd Input -->
        <EditText
            android:id="@+id/signUp_reEnteredPassword"
            android:maxLength="15"
            android:maxLines="1"
            android:password="true"
            android:layout_gravity="center_horizontal"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/password_icon"
            android:hint="Confirm Password"
            android:drawablePadding="10dp"
            android:background="@drawable/signupbtn_background"
            android:padding="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"></EditText>

        <!-- Sing up Button -->
        <Button
            android:id="@+id/signUp_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/loginbtn_background"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            android:textSize="21sp"></Button>

        </LinearLayout>

</RelativeLayout>