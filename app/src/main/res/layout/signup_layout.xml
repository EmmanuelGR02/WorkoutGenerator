<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background">


    <Button
        android:id="@+id/signUp_backButton"
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:shadowColor="@color/dark_gray"
        android:text="BACK"
        android:textStyle="bold"
        android:background="@drawable/signup_backbtn_background"
        android:drawableStart="@drawable/back_icon"
        ></Button>

    <TextView
        android:id="@+id/login_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="5dp"
        android:gravity="center_horizontal"
        android:padding="0dp"
        android:text="SIGN UP"
        android:textColor="@color/navy"
        android:textSize="50sp"
        android:textStyle="bold"
        android:shadowColor="@color/black"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="4"></TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/signup_linearlayout_border"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="10dp"
        android:elevation="15dp"
        android:padding="5dp">

        <!-- Title -->

        <!-- Error Message -->
        <TextView
            android:id="@+id/signUp_errMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:layout_marginBottom="7dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/red"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <!-- Name Input -->
            <EditText
                android:id="@+id/signUp_name"
                android:maxLength="12"
                android:maxLines="1"
                android:elevation="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/name_icon"
                android:hint="Name        "
                android:drawablePadding="10dp"
                android:background="@drawable/signup_name_input"
                android:padding="8dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"></EditText>

             <!--Last Name Input-->
            <EditText
                android:id="@+id/signUp_lastName"
                android:maxLength="12"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/name_icon"
                android:hint="Last Name   "
                android:drawablePadding="10dp"
                android:background="@drawable/signup_lastname_input"
                android:padding="8dp"
                android:layout_marginStart="0dp">
            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/gender"
                android:layout_weight="0"
                android:layout_width="130dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_height="40dp"
                tools:listitem="@layout/item_dropdown"
                android:background="@drawable/genderpicker_background"
            ></Spinner>

            <Button
                android:id="@+id/selectBirthdateButton"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginStart="45dp"
                android:layout_marginTop="5dp"
                android:text="Birth  Date"
                android:background="@drawable/signup_birthdatebtn_background"
                android:onClick="showDatePickerDialog"
                />

        </LinearLayout>

         <!--Username Input-->
        <TextView
            android:id="@+id/invalidUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:textStyle="bold"
            android:textColor="@color/red"></TextView>

        <EditText
            android:id="@+id/signUp_username"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/signup_username_input"
            android:drawableStart="@drawable/login_icon"
            android:drawablePadding="10dp"
            android:hint="Username"
            android:maxLength="15"
            android:maxLines="1"
            android:padding="8dp"></EditText>

         <!--Password Input-->
        <TextView
            android:id="@+id/invalidPassword"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=""
            android:textColor="@color/red"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"></TextView>

        <EditText
            android:id="@+id/signUp_password"
            android:layout_width="292dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/signup_password_background"
            android:drawableStart="@drawable/password_icon"
            android:drawablePadding="10dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:maxLength="15"
            android:maxLines="1"
            android:padding="5dp"></EditText>

         <!--Password 2nd Input-->

         <!--Sing up Button-->
        <EditText
            android:id="@+id/signUp_reEnteredPassword"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/signup_password_background"
            android:drawableStart="@drawable/password_icon"
            android:drawablePadding="10dp"
            android:hint="Confirm Password"
            android:maxLength="15"
            android:maxLines="1"
            android:padding="5dp"
            android:inputType="textPassword"
            ></EditText>

        <Button
            android:id="@+id/signUp_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/signup_signupbtn_background"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:textSize="21sp"
            ></Button>

        </LinearLayout>

</RelativeLayout>